@inherits SearchBase

<BlazoredTypeahead SearchMethod="SearchHeroes"
                   @bind-Value="SelectedHero"
                   ShowDropDownOnFocus="true"
                   placeholder="Search by first name...">
    <SelectedTemplate Context="hero">
        @hero.Name
    </SelectedTemplate>
    <ResultTemplate Context="hero">
        @hero.Name
    </ResultTemplate>
    <NotFoundTemplate>
        Not found
    </NotFoundTemplate>
</BlazoredTypeahead>
